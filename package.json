{
  "name": "python-ultimate-env",
  "publisher": "matheus",
  "displayName": "python_ultimate_env",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": ["Linters", "Programming Languages"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Python Ultimate Env",
      "properties": {
        "pythonUltimateEnv.activationPreference": {
          "type": "string",
          "enum": ["never", "ask", "always"],
          "default": "ask",
          "description": "Escolha como a extensão deve lidar com a ativação do ambiente virtual Python.",
          "enumDescriptions": {
            "never": "Nunca ativar o ambiente virtual automaticamente.",
            "ask": "Perguntar ao usuário se deseja ativar o ambiente virtual.",
            "always": "Sempre ativar o ambiente virtual automaticamente."
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
